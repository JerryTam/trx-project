server:
  host: 0.0.0.0
  port: 8080
  mode: debug # debug, release, test

database:
  mysql:
    host: localhost
    port: 3306
    username: root
    password: password
    database: trx_db
    max_idle_conns: 10
    max_open_conns: 100
    max_lifetime: 3600 # seconds
    log_level: info

redis:
  host: localhost
  port: 6379
  password: ""
  db: 0
  pool_size: 10
  min_idle_conns: 5

kafka:
  brokers:
    - localhost:9092
  group_id: trx-group
  topics:
    - trx-topic

logger:
  level: debug # debug, info, warn, error
  encoding: json # json, console
  output_paths:
    - stdout
    - logs/app.log
  error_output_paths:
    - stderr
    - logs/error.log

jwt:
  secret: your-secret-key-change-in-production
  issuer: trx-project
  expire_hours: 168 # 7天
  admin_expire_hours: 24 # 1天

